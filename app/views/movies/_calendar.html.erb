    <div class="session-calendar">
      <% cache days do %>
        <% days.each do |date| %>
          <% cache date do %>
            <%= link_to movie_path(movie, date: date) do %>
              <div class="session-calendar__day p-2 border text-center">
                <p class='mb-1'><strong><%= date.strftime('%^a') %></strong></p>
                <p class='mb-1'><%= date.strftime('%e/%d') %></p>
              </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
